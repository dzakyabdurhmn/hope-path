generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model UserTask {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  taskId    Int
  note      String
  userId    Int

  user      User     @relation(fields: [userId], references: [id], map: "DailyTask_userId_fkey")
  task      Task     @relation(fields: [taskId], references: [id], onUpdate: Restrict, map: "Task_fk")

  @@index([userId], map: "DailyTask_userId_fkey")
}

model Debt {
  id     Int      @id @default(autoincrement())
  userId Int
  date   DateTime
  amount Float
  type   String
  note   String?
  user   User     @relation(fields: [userId], references: [id], map: "Debt_userId_fkey")

  @@index([userId], map: "Debt_userId_fkey")
}

model Rehabilitation {
  id      Int    @id @default(autoincrement())
  name    String
  address String
  user    String
}

model Task {
  id        Int        @id @default(autoincrement())
  name      String     @db.VarChar(255)
  points    Int        @db.TinyInt
  body      String     @db.Text
  userTasks UserTask[] 
}

model User {
  id         Int        @id @default(autoincrement())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  clerkUserId String?   @unique
  tasks      UserTask[]
  debts      Debt[]
}
